<p id="notice" ><%= notice %> </p>

<p>
  <div class="words cypher">
  <% @game.word_list.each_with_index do |word, i| %>
    <div class="word type-<%= @game.cypher[i] %>">
      <%= word %>
    </div>
  <% end %> 
  </div>
</p>

<%= link_to 'Back', games_path %>

<script>
[...document.querySelectorAll('.word')].forEach(function(item) {
  item.addEventListener('click', function() {
    item.classList.add("black-border");
  });
});
</script>